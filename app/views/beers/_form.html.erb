<%= form_for(@beer) do |f| %>

  <label>Name:</label>
  <%= f.text_field :name %>
  <br><br>

  <%= f.fields_for :brewery, @brewery do |b_field| %>
    <label>Brewery Name:</label>
    <%= b_field.text_field :name %>
    <br><br>

    <label>Brewery Location:</label><br>
    <label>City</label>
    <%= b_field.text_field :city %>
    <label>State</label>
    <%= b_field.text_field :state %>
  <% end %>
  <br><br>

  <label>Type of Beer:</label>
  <%= f.text_field :beer_type %>
  <br><br>

  <label>IBU:</label>
  <%= f.text_field :ibu %>
  <br><br>

  <label>ABV:</label>
  <%= f.text_field :abv %>
  <br><br>

  <%= f.submit %>
<% end %>
